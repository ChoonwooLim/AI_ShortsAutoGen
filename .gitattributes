# Auto detect text files and normalize line endings
* text=auto

# Force consistent LF for source code
*.cpp text eol=lf
*.h   text eol=lf
*.cs  text eol=lf
*.usf text eol=lf
*.ush text eol=lf
*.uproject text eol=lf
*.ini text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Binary files - treat as binary to prevent diff or merge
*.uasset binary
*.umap binary
*.fbx binary
*.png binary
*.jpg binary
*.jpeg binary
*.bmp binary
*.mp3 binary
*.wav binary
*.ogg binary
*.mp4 binary
*.avi binary
*.uasset filter=lfs diff=lfs merge=lfs -text
*.umap filter=lfs diff=lfs merge=lfs -text

# Fonts, animations, packed assets
*.ttf binary
*.otf binary
*.glb binary
*.gltf binary

# EXE and DLL
*.exe binary
*.dll binary
*.lib binary
*.pdb binary

# Optional: LFS (Git Large File Storage) for heavy assets
# (Use only if Git LFS is enabled in repo)
# *.uasset filter=lfs diff=lfs merge=lfs -text
# *.umap   filter=lfs diff=lfs merge=lfs -text

# Exclude visual studio temporary file behavior
*.sln text
*.vcxproj text
*.vcxproj.filters text
